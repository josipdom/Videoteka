@model Videoteka.ViewModels.FilmFormaViewModel

@{
    ViewBag.Title = Model.Naslov;
}

<h2>@Model.Naslov</h2>

@using (Html.BeginForm("Spremi", "Filmovi"))
{
    @Html.ValidationSummary(true, "Ispravite sljedeće greške..")
    <div class="form-group">
        @Html.LabelFor(m => m.Film.Naziv)
        @Html.TextBoxFor(m => m.Film.Naziv, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Film.Naziv)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Film.DatumIzlaska)
        @Html.TextBoxFor(m => m.Film.DatumIzlaska, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Film.DatumIzlaska)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Film.ZanrId)
        @Html.DropDownListFor(m => m.Film.ZanrId, new SelectList(Model.Zanrovi, "Id", "Naziv"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Film.ZanrId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Film.BrojNaSkladistu)
        @Html.TextBoxFor(m => m.Film.BrojNaSkladistu, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Film.BrojNaSkladistu)
    </div>
    @Html.HiddenFor(m => m.Film.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Spremi</button>
}
@section scripts
{
   @Scripts.Render("~/bundles/jqueryval")
}